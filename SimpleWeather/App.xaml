<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SimpleWeather"
             x:Class="SimpleWeather.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <Style x:Key="LightTheme" TargetType="ContentPage">
                <!-- Define your light theme styles here -->
                <Setter Property="BackgroundColor" Value="White" />
                <!-- Add other styles as needed -->
            </Style>

            <Style x:Key="DarkTheme" TargetType="ContentPage">
                <!-- Define your dark theme styles here -->
                <Setter Property="BackgroundColor" Value="Black" />
                <!-- Add other styles as needed -->
            </Style>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/LightTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
