<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleWeather.DarkTheme">
    <Style x:Key="PageStyle" TargetType="Page">
        <Setter x:Name="PageBackground" Property="Background" Value="MidnightBlue"/>
    </Style>
    <Style x:Key="LabelPrimary" TargetType="Label">
        <Setter x:Name="TextColorPrimary" Property="TextColor" Value="GhostWhite"/>
    </Style>


    <Color x:Key="PrimaryColor">MidnightBlue</Color>
    <Color x:Key="SecondaryColor">LightSteelBlue</Color>
    <Color x:Key="ThirdColor">Purple</Color>

</ResourceDictionary>