<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleWeather.Pages.SettingPage"
             Title="SettingPage">
    <Grid 
        RowDefinitions="0.1*, 0.45*, 0.05*, 0.35*, 0.05*"
        Margin="20">
        
        <Label
            Text="Weather Settings"
            HorizontalTextAlignment="Start"
            VerticalTextAlignment="Center"
            FontFamily="Saira-VariableFont.ttf"/>
        
        <ImageButton 
            Source="x_button.svg"
            HorizontalOptions="End"
            x:Name="xButton"
            Clicked="xButton_Clicked"/>
        
        <Frame
            BackgroundColor="LightSteelBlue"
            Grid.Row="1"
            BorderColor="PeachPuff"
            CornerRadius="10"
            HasShadow="True">

            <Grid
                RowDefinitions="*, *, *, *"
                ColumnDefinitions="0.4*, 0.3*, 0.3*">

                <Label
                    Text="Unit (Off °F / On °C)"
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    FontFamily="Saira-VariableFont.ttf"
                    Margin="20"
                    VerticalTextAlignment="Center"/>

                <Switch IsToggled="True"
                        Grid.Column="2"
                        OnColor="AliceBlue"
                        ThumbColor="Black"/>

                <Label
                    Text="Auto Refresh (Every 1min)"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    FontFamily="Saira-VariableFont.ttf"
                    Margin="20"
                    VerticalTextAlignment="Center"/>

                <Switch IsToggled="True"
                        Grid.Row="1"
                        Grid.Column="2"
                        OnColor="AliceBlue"
                        ThumbColor="Black"/>

                <Label
                    Text="Notifications"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    FontFamily="Saira-VariableFont.ttf"
                    Margin="20"
                    VerticalTextAlignment="Center"/>

                <Switch IsToggled="True"
                        Grid.Row="2"
                        Grid.Column="2"
                        OnColor="AliceBlue"
                        ThumbColor="Black"/>

                <Label Text="Dark mode"
                       Grid.Row="3"
                       Grid.ColumnSpan="2"
                       FontFamily="Saira-VariableFont.ttf"
                       Margin="20"
                       VerticalTextAlignment="Center"/>

                <Switch IsToggled="True"
                        Grid.Row="3"
                        Grid.Column="2"
                        OnColor="AliceBlue"
                        ThumbColor="Black"/>
            </Grid>
        </Frame>

        <Label
            Text="Room for improvement?"
            Grid.Row="2"
            VerticalTextAlignment="Center"
            FontFamily="Saira-VariableFont.ttf"
            Margin="20,0,0,0"/>

        <Frame
            BackgroundColor="LightSlateGray"
            Grid.Row="3"
            BorderColor="PeachPuff"
            CornerRadius="45"
            HasShadow="True">
            
            <Entry
                Placeholder="We love your opinion!"
                Margin="10"/>
        </Frame>

        <ImageButton
            Source="submit_button.svg"
            Grid.Row="4"
            HorizontalOptions="End"/>
    </Grid>
</ContentPage>