<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleWeather.LightTheme">
    <Style x:Key="PageStyle" TargetType="Page">
        <Setter x:Name="PageBackground" Property="Background" Value="lightblue"/>
    </Style>
    <Style x:Key="LabelPrimary" TargetType="Label">
        <Setter x:Name="TextColorPrimary" Property="TextColor" Value="Black"/>
        <Setter x:Name="Page" Property="Background" Value="Gainsboro"/>
    </Style>

    <Color x:Key="Primary colour">MidnightBlue</Color>
    <Color x:Key="Secondarycolour">LightSteelBlue</Color>
</ResourceDictionary>